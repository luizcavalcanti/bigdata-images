<project name="bigdata-images" default="dist" basedir="." >
    
    <property name="data.dir" location="data"/>
    <property name="src.dir" location="src"/>
    <property name="build.dir" location="bin"/>
    <property name="dist.dir"  location="dist"/>
    <property name="hadoop.dir" location="/usr/local/Cellar/hadoop/1.2.1/libexec/" />
    <property name="jar.name" value="bigdata-images" />

    <target name="init" depends="clean">
        <tstamp/>
        <mkdir dir="${build.dir}"/>
    </target>

    <target name="compile" depends="init" >
        <javac srcdir="${src.dir}" destdir="${build.dir}" target="1.6" source="1.6">
            <classpath>
                <fileset dir="${hadoop.dir}" >
                    <include name="hadoop-core-*.jar"/>
                </fileset>
            </classpath>
        </javac>
    </target>

    <target name="dist" depends="compile" >
        <mkdir dir="${dist.dir}"/>
        <jar jarfile="${dist.dir}/${jar.name}.jar" basedir="${build.dir}"/>
    </target>

    <target name="clean"> 
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>

</project>